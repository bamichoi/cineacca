container_commands:
  01_migrate:
    command: "source /var/app/venv/*/bin/activate && python manage.py migrate"
    leader_only: true
  02_createsu:
    command: "source /var/app/venv/*/bin/activate && python manage.py createsu"
  04_collectstatic:
    command : "/opt/python/current/env && python /opt/python/current/app/manage.py collectstatic --noinput"
option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: config.wsgi:application
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: config.settings